<li class="card video-card">
  <div class="card-media">
    <iframe
      src="https://www.youtube.com/embed/<%= video.youtube_id %>?rel=0&autoplay=<%= params[:autoplay] || 0 %>"
      title="<%= video.title %>"
      frameborder="0"
      allowfullscreen>
    </iframe>
  </div>
  <%= link_to video_path(video), class: "card-link-overlay", aria: { label: "View #{video.title}" } do %>
  <% end %>
  <h3 class="card-title truncate-1"><%= video.title %></h3>
  <p class="card-text truncate-2"><%= video.description %></p>
</li>
