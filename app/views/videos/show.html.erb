<article class="video">
  <header class="content-stack">
    <h1><%= @video.title %></h1>
    <% if @video.description.present? %>
      <p class="card-text"><%= @video.description %></p>
    <% end %>
  </header>

  <div class="card-media">
    <% if @video.embed_url.present? %>
      <iframe
        src="<%= @video.embed_url %>?rel=0&autoplay=<%= params[:autoplay] || 0 %>"
        title="<%= @video.title %>"
        frameborder="0"
        allowfullscreen>
      </iframe>
    <% elsif @video.image.present? %>
      <%= image_tag @video.image, alt: @video.title %>
    <% end %>
  </div>

  <nav class="navigation">
    <% if @video.url.present? %>
      <%= link_to "See More", @video.url %> |
    <% end %>
    <%= link_to "Back to Videos", videos_path %> |
    <%= link_to "Home", root_path %>
  </nav>
</article>
