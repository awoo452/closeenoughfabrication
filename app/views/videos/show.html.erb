<article class="video">
  <header class="content-stack">
    <h1><%= @video.title %></h1>
    <% if @video.description.present? %>
      <p class="card-text"><%= @video.description %></p>
    <% end %>
  </header>

  <div class="card-media">
    <iframe
      src="https://www.youtube.com/embed/<%= @video.youtube_id %>?rel=0&autoplay=<%= params[:autoplay] || 0 %>"
      title="<%= @video.title %>"
      frameborder="0"
      allowfullscreen>
    </iframe>
  </div>

  <nav class="navigation">
    <%= link_to "Back to Videos", videos_path %> |
    <%= link_to "Home", root_path %>
  </nav>
</article>
