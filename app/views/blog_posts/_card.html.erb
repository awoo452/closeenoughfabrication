<li class="card blog-post-card">
  <h3 class="card-title"><%= blog_post.title %></h3>

  <% if blog_post.image.present? %>
    <div class="card-media">
      <%= image_tag blog_post.image, alt: blog_post.title %>
    </div>
  <% end %>

  <p class="card-text"><%= blog_post.description %></p>
  <%= link_to "Read More", blog_post_path(blog_post), class: "card-link" %>
</li>
